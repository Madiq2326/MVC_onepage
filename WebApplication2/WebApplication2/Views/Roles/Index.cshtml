
@{
    ViewBag.Title = "Index";
}

<h2>Table_Role</h2>

    <button class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="ClearScreen();" >Create New</button>
<hr />

<table id="table_role" class="table table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Role Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id">Id</label>
                    <input type="text" class="form-control" id="RoleIdText" placeholder="Id" />
                </div>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="RoleNameText" placeholder="Name">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="Validation();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" onclick="Validation();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

    <script>
        $(document).ready(function () {
            debugger
            $("#table_role").DataTable({
                "ajax": {
                    "url": "/Roles/GetDataRoles",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Name" },
                    {
                        "render": function (data, type, row, meta) {
                            return "<a data-toggle='tooltip' data-placement='left' title='Edit' class='btn btn-primary' onclick=GetById('" + row.Id + "');><i class='fa fa-pencil'></i></a> <a data-toggle='tooltip' data-placement='right' title='Delete' class='btn btn-danger' onclick=Delete('" + row.Id + "');><i class='fa fa-trash'></i></a>";
                        }
                    }
                ]
            });
        });

        function Delete(Id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        "url": "/Roles/Delete/",
                        "datatype": "json",
                        "data": { Id: Id }
                    }).then((result) => {
                        if (result.data[0] != 0) {
                            Swal.fire(
                                'Success!',
                                'Your file has been deleted.',
                                'success'
                            )
                        }
                        else {
                            Swal.fire(
                                'Failed!',
                                'Your file not deleted.',
                                'failed'
                            )
                        }
                        $("#myModal").modal('hide');
                    })
                    location.reload();
                }
            })
        }

        function Edit(Id) {
            var role = new Object();
            role.Id = $("#RoleIdText").val();
            role.Name = $("#RoleNameText").val();
            $.ajax({
                "url": "/Roles/Edit/",
                "type": "POST",
                "datatype": "json",
                "data": {Id: role.Id, Name: role.Name}
            }).then((result) => {
                if (result.data[0] != 0) {
                    Swal.fire(
                        'Success!',
                        'Your file has been updated.',
                        'success'
                    )
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file not updated.',
                        'failed'
                    )
                }
                $("#myModal").modal('hide');
                location.reload();
            })
        }

        function Save() {
            var role = new Object();
            role.Name = $("#RoleNameText").val();
            $.ajax({
                "url": "/Roles/Create/",
                "type": "POST",
                "datatype": "json",
                "data": role
            }).then((result) => {
                if (result.data[0] != 0) {
                    Swal.fire(
                        'Success!',
                        'Your file has been inserted.',
                        'success'
                    )
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file not inserted.',
                        'failed'
                    )
                }
                $("#myModal").modal('hide');
                location.reload();
            })
        }

        function GetById(Id) {
            $.ajax({
                "url": "/Roles/Details/",
                "type": "GET",
                "datatype": "json",
                "data": { Id: Id }
            }).then((result) => {
                if (result.data[0] != null) {
                    document.getElementById("RoleIdText").disabled = true;
                    $("#RoleIdText").val(result.data[0].Id);
                    $("#RoleNameText").val(result.data[0].Name)

                    $("#myModal").modal('show');
                    $("#Update").show();
                    $("#Save").hide();
                }
            });
        }

        function ClearScreen() {
            document.getElementById("RoleIdText").disabled = true;
            $("#RoleNameText").val('');
            $('#Update').hide(); 
        }

        function Validation() {
            if ($("#RoleNameText").val() == "" || $("#RoleNameText").val == " ") {
                Swal.fire('Please Fill Name');
            }
            else if ($("#RoleIdText").val() == "" || $("#RoleIdText").val == " ") {
                Save();
            }
            else {
                Edit($("#RoleIdText").val())
            }
        }

    </script>
}


